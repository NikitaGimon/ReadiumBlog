<div class="row">
    <div class="col-md-12 text-center">
        <h1>All categories</h1>
    </div>
</div>
<% @categories.each do |category| %>
    <div class="row">
        <div class="col-md-12">
            <div class="card mt-3">
                <div class="card-body">
                    <h5>
                        <%= link_to category.name, category_path(category) %>
                    </h5>
                </div>
            </div>
        </div>
    </div>
    <% end %>