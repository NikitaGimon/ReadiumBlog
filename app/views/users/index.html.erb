<h1> All users </h1>
<div align="center">
    <%= will_paginate @users, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>
<% @users.each do |user| %>
    <ul>
        <li>
            <%= link_to user.username, user_path(user) %>
        </li>
        <p>
            <%= pluralize(user.articles.count, "article") if user.articles %>
        </p>     
    </ul>
<% end %>
<div align="center">
    <%= will_paginate @users, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer %>
</div>