<div class="row">
    <div class="col-md-12 text-center">
        <h1>New user</h1>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <% if @user.errors.any? %>
            <h2>The following errors prevented the article from getting created</h2>
            <ul>
                <% @user.errors.full_messages.each do |msg| %>
                    <li>
                        <%= msg %>
                    </li>
                    <% end %>
            </ul>
            <% end %>
    </div>
</div>


<div class="row justify-content-center">
    <div class="col-md-6 mt-3">
        <%= form_for @user do |f| %>
            <form>
                <div class="form-group">
                    <%= f.label :username %><br/>
                        <%= f.text_field :username, placeholder: "Enter your username", class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :email %><br/>
                        <%= f.email_field :email, placeholder: "Enter your email", class:"form-control" %>
                </div>
                <div class="form-group">
                    <%= f.label :password %><br/>
                        <%= f.password_field :password, placeholder: "Enter your password", class:"form-control" %>
                </div>

                <%= f.submit "Sign up", class: "btn btn-primary" %>
            </form>
            <% end %>
    </div>
</div>