
<%= form_for @article do |f| %>
    <form>
        <div class="form-group">
            <%= f.label :title %><br/>
                <%= f.text_field :title , class:"form-control" %>
        </div>
        <div class="form-group">
            <%= f.label :description %><br/>
                <%= f.text_area :description, rows: 12, class:"form-control" %>
        </div>
        <%= f.submit "Create", class: "btn btn-primary"  %>
    </form>
    <% end %>