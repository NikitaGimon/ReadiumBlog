<h1>Create an article</h1>

<% if @article.errors.any? %>

    <h2>The following errors prevented the article from getting created</h2>

    <ul>

        <% @article.errors.full_messages.each do |msg| %>

            <li>
                <%= msg %>
            </li>

            <% end %>

    </ul>

    <% end %>
        <div class="row">
            <div class="col-md-12">
                <%= render "articles/form" %>
            </div>
        </div>